{
  // ==========================
  // Window & Editor Settings
  // ==========================
  "window.titleBarStyle": "native",
  "window.menuBarVisibility": "toggle",
  "window.title": "${dirty}${activeEditorLong}",
  "editor.hover.delay": 600,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.minimap.renderCharacters": false,
  "editor.scrollBeyondLastLine": true,
  "editor.snippets.codeActions.enabled": true,
  "editor.suggest.snippetsPreventQuickSuggestions": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "always"
  },
  "editor.scrollbar.verticalScrollbarSize": 1,
  "editor.fontFamily": "Geist Mono, JetBrains Mono, Fira Code",
  "editor.suggestFontSize": 16,
  "editor.suggestLineHeight": 30,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "keyword",
          "variable.language",
          "entity.other.attribute-name.html",
          "entity.other.attribute-name",
          "keyword.control",
          "storage.type",
          "comment",
          "comment.block",
          "comment.line"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },

  // ==========================
  // Git & Version Control
  // ==========================
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.enableSmartCommit": true,

  // ==========================
  // JavaScript & TypeScript Settings
  // ==========================
  "javascript.preferences.importModuleSpecifier": "project-relative",
  "javascript.preferGoToSourceDefinition": true,
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.maxTokenizationLineLength": 2500,
    "editor.codeActionsOnSave": {
      "source.addMissingImports.ts": "always",
      "source.fixAll.eslint": "always",
      "source.fixAll.ts": "always",
      "source.organizeImports": "always",
      "source.removeUnused.ts": "always",
      "source.removeUnusedImports": "always",
      "source.sortImports": "always"
    },
    "editor.quickSuggestions": {
      "other": "on",
      "comments": "on",
      "strings": "on"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ==========================
  // Python Settings
  // ==========================
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.formatOnType": true,
    "editor.wordBasedSuggestions": "allDocuments",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "files.autoSave": "afterDelay"
  },
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,

  // ==========================
  // Dart & Flutter Settings
  // ==========================
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.selectionHighlight": false,
    "editor.suggestSelection": "recentlyUsedByPrefix"
  },
  "dart.enableCompletionCommitCharacters": true,
  "dart.previewCommitCharacters": true,
  "dart.debugExternalPackageLibraries": true,
  "dart.debugSdkLibraries": false,

  // ==========================
  // CSS, HTML, and JSON Settings
  // ==========================
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ==========================
  // Terminal & File Settings
  // ==========================
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.fontSize": 12,
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // ==========================
  // VSCode Custom CSS & Misc
  // ==========================
  "vscode_custom_css.imports": [
    "file:///home/shivang/vsc_custom/vscode-custom-css.css",
    "file:///home/shivang/vsc_custom/vscode-script.js"
  ],
  "editor.copyWithSyntaxHighlighting": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "eq-material-theme-icons-light",
  "workbench.tree.enableStickyScroll": false,
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": false,
  "workbench.editor.empty.hint": "hidden",
  "zenMode.centerLayout": false,
  "zenMode.showTabs": "none",

  // ==========================
  // CMake & Rust Settings
  // ==========================
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "rust-analyzer.inlayHints.genericParameterHints.type.enable": true,
  "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "always",
  "rust-analyzer.inlayHints.lifetimeElisionHints.useParameterNames": true,
  "cmake.showOptionsMovedNotification": false,
  "workbench.editor.enablePreviewFromCodeNavigation": true
}
